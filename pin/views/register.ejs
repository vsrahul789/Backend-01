<%include ./partials/header.ejs%>

    <div class='w-full h-screen flex justify-center items-center bg-zinc-300'>
        <div class='w-[32vw] h-[90vh] bg-zinc-100 rounded-[30px] px-20 py-10'>
            <h1
                class='text-4xl mt-16 mb-4 tracking-tight text-center tracking-tighter font-semibold text-zinc-800 capitalize leading-zone'>
                Create New Account</h1>
            <form action="/register" method="post">
                <input class='border-2 block w-full px-3 rounded-md py-2 mt-2 ' type="text" name="username"
                    placeholder="Username">
                <input class='border-2 block w-full px-3 rounded-md py-2 mt-2 ' type="email" name="email"
                    placeholder="Email">
                <input class='border-2 block w-full px-3 rounded-md py-2 mt-2 ' type="number" name="contact"
                    placeholder="Contact">
                <input class='border-2 block w-full px-3 rounded-md py-2 mt-2 ' type="password" name="password"
                    placeholder="Password">
                <input class='block w-full px-3 py-2 mt-6 bg-red-600 text-white rounded-full' type="submit"
                    name="submit" value="Create new account">
                <p class='block mt-3 px-3 text-center'>By continuing, you agree to Pinterest's <a href="#"
                        class="font-bold">Terms
                        of
                        Service</a> and acknowledge you've read our <a href="#"
                        class="font-bold text-decoration-underline">Privacy
                        Policy</a>.
                </p>
            </form>
            <a class='block text-zinc-600 text-center mt-6' href="/">Already have an account? Signin</a>
        </div>
    </div>
    <%include ./partials/footer.ejs%>