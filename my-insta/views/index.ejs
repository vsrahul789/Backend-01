<%include ./partials/header.ejs%>
  <div class="signup w-full min-h-screen bg-zinc-50 flex flex-wrap justify-center align-center">
    <div class="w-[30vw] h-[80vh] bg-white mt-9 px-20 py-10 border-2">
      <h1 class="instagram text-5xl text-zinc-700 text-center cursor-default tracking-tight">Instagram</h1>
      <p class="w-[90%] mt-3 text-lg text-zinc-500 text-center font-sans text-wrap leading-tight">Sign up to see photos
        and videos
        from your
        friends.</p>
      <hr class="w-80 mt-4 border-zinc-300" />

      <form action="/register" method="post" class="flex flex-wrap align-center justify-center">
        <input type="email" name="email" placeholder="Email"
          class="w-80% text-xl text-zinc-500 px-5 py-1 mt-3 font-sans border-2 border-zinc-300 rounded-md" />
        <input type="text" name="fullname" placeholder="Fullname"
          class="w-80% text-xl text-zinc-500 px-5 py-1 mt-3 font-sans border-2 border-zinc-300 rounded-md" />
        <input type="text" name="username" placeholder="Username"
          class="w-80% text-xl text-zinc-500 px-5 py-1 mt-3 font-sans border-2 border-zinc-300 rounded-md" />
        <input type="password" name="password" placeholder="Password"
          class="w-80% text-xl text-zinc-500 px-5 py-1 mt-3 font-sans border-2 border-zinc-300 rounded-md" />

        <p class="w-[90%] mt-8 text-sm text-zinc-500 text-center font-sans text-wrap leading-tights">By signing up, you
          agree to our <span class="text-black font-sans cursor-pointer">Terms </span> ,<span
            class="text-black font-sans cursor-pointer">Privacy
            Policy</span> and <span class="text-black font-sans cursor-pointer">Cookies Policy</span>.</p>

        <input class='block w-[270px] py-2 mt-4 bg-blue-600 font-sans text-white rounded-md' type="submit" name="submit"
          value="Signup">
      </form>
      <p class="mt-8 text-md text-zinc-500 text-center font-sans text-wrap leading-tights">Have an account?
        <a href="/login" class="text-black font-semibold font-sans">Login</a>
      </p>
    </div>
  </div>
  <%include ./partials/footer.ejs%>